{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",             /* Quan trọng: Dùng CommonJS cho Node.js */
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,          /* Cho phép import express from 'express' */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false ,
    "types": ["node"]    
  },
  "include": ["src/**/*", "prisma/seed.ts"],
  "exclude": ["node_modules"]
}